#!/usr/bin/env bash

xsetroot -cursor_name left-ptr

numlockx &
#xcompmgr -c -C -I-.015 -O-.03 -D6 -t-1 -l-3 -r4.2 -o.5 &
picom &
unclutter --timeout 10 --ignore-scrolling &
feh --recursive --bg-fill --randomize ~/Pictures/Wallpaper/ &
xss-lock -l -- betterlockscreen -u ~/Pictures/Lockscreens -l dimblur &

xmodmap -e 'keycode 135 = Super_R' &

export WMNAME="wmctrl -m | awk -F': ' 'NR==1 {print \$2}'"
case $WMNAME in
  herbstluftwm)
    polybar_launcher &
    ;;
esac

feh --bg-fill --randomize ~/Pictures/Wallpaper/* &
[ -f $XDG_CONFIG_HOME/wacom/config ] && source $XDG_CONFIG_HOME/wacom/config
