#!/usr/bin/env bash

xsetroot -cursor_name left-ptr

picom --config $XDG_CONFIG_HOME/picom/picom.conf &
unclutter --timeout 10 --ignore-scrolling &
feh --no-xinerama --recursive --bg-fill --randomize ~/Pictures/Wallpapers/ &

if [ ! $SINK_SET ]; then
	pactl load-module module-null-sink sink_name=System sink_properties=device.description=System_Audio
	pactl load-module module-null-sink sink_name=Discord channels=1 channel_map=mono sink_properties=device.description=Discord_Voice
	pactl load-module module-null-sink sink_name=Music sink_properties=device.description=Music
	jack_mixer -c ~/.config/jack_mixer/master.xml &
	qpwgraph -m ~/.config/rncbc.org/patchbays/master.qpwgraph &
	export SINK_SET=true
fi

xmodmap -e 'keycode 135 = Super_R' &

[ -f $XDG_CONFIG_HOME/wacom/config ] && source $XDG_CONFIG_HOME/wacom/config

