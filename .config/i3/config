set $TERMINAL kitty
set $BROWSER firefox
set $mod Mod4

font pango:FuraCode Nerd Font 14
floating_modifier $mod
focus_follows_mouse no
focus_on_window_activation urgent

default_border pixel 1
default_floating_border pixel 1

gaps inner 10

