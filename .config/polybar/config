;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;            Primary bar             ;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[bar/primary]
enable-ipc = true

monitor = ${env:MONITOR:DP-0}
; Use specified monitor as a fallback if main not found
;monitor-fallback =
; Require monitor to be in connected state
monitor-strict = false
monitor-exact = true

; Detach bar
override-redirect = true

bottom = false

fixed-center = true

width   = 100%
height  = 25

; Dimension defined as pixel value or percentage.
; Hybrid (e.g. 50%:-10)
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}
; Background gradient (vertical steps)
;   background-[0-9]+ = #AARRGGBB
;background-0 =

radius = 0.0

; {overline,underline}-size
; {overline,underline}-color
line-size = 1
line-color = #F00

border-size = 0
border-color = ${colors.border}

padding-left  = 0
padding-right = 0

module-margin-left  = 2
module-margin-right = 2

font-0 = "FiraCode Nerd Font:pixelsize=10;0"

#modules-left    = hlws1 bspwm i3
modules-left = i3
modules-center  =
modules-right   = pulseaudio eth wlan temperature date  powermenu

separator =

spacing = 0

dim-value = 1.0

wm-name =

locale = en_US.UTF-8

;tray-position = right
;tray-detached = false
;tray-maxsize = 20
;tray-background = ${root.background}
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding  = 0
;tray-scale    = 1.0

wm-restack = bspwm

dpi-x = 96
dpi-y = 96


;click-left          =
;click-middle        =
;click-right         =
;scroll-up           = i3wm-wsnext
;scroll-down         = i3wm-wsprev
