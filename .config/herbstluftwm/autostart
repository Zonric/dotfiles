#!/usr/bin/env bash

hc() {
	herbstclient "$@"
}

hc emit_hook reload
xsetroot -solid '#003333'

source ~/.config/herbstluftwm/bindings
source ~/.config/herbstluftwm/rules
source ~/.config/herbstluftwm/theme

hc detect_monitors
for monitor in $(hc list_monitors | cut -d':' -f1); do
	hc pad $monitor 25
done

#-----------#
# Autostart #
#-----------#
polybar_launcher &
dunst &

#discord &
#spotify-launcher &
#obs &
